<?xml version="1.0" encoding="UTF-8"?>
<completions>
	<!-- Tags directly after "{% " -->
	<provider>
		<syntax>stencil</syntax>
		<selector>*:not(string,comment)</selector>
		<expression>(?&lt;=\{%\s)([a-zA-Z]*)</expression>
		<set>stencil.tags</set>
	</provider>

	<!-- Filters after "|" -->
	<provider>
		<syntax>stencil</syntax>
		<selector>*:not(string,comment)</selector>
		<expression>(?&lt;=\|)([a-zA-Z]*)</expression>
		<set>stencil.filters</set>
	</provider>

	<!-- Anything after regular opening brackets -->
	<provider>
		<syntax>stencil</syntax>
		<selector>*:not(string, comment)</selector>
		<expression>(?&lt;=\()([a-zA-Z]*)</expression>
		<symbols type="variable" />
		<symbols type="function">
			<behavior>
				<arguments prefix="(" suffix=")" separator=", " />
			</behavior>
		</symbols>
		<set>stencil.globals</set>
	</provider>

	<!-- Anything else after space, but not directly behind "{%" -->
	<provider>
		<syntax>stencil</syntax>
		<selector>*:not(string, comment)</selector>
		<expression>(?&lt;!is\s|apply\s|\{%\s|\S)([a-zA-Z]*)(?!%\})</expression>
		<symbols type="variable" />
		<symbols type="function">
			<behavior>
				<arguments prefix="(" suffix=")" separator=", " />
			</behavior>
		</symbols>
		<set>stencil.functions</set>
		<set>stencil.keywords</set>
		<set>stencil.globals</set>
	</provider>

	<!-- Tags -->
	<set name="stencil.tags">
		<!-- Default: auto complete %} at the end -->
		<behavior suffix="\}">
			<append> %</append>
		</behavior>
		<behavior suffix="%\}">
			<append> </append>
		</behavior>
		<behavior suffix="(\s*%\})">
			<append></append>
		</behavior>
		<behavior>
			<append> %}</append>
		</behavior>
		
		<!-- Control flow -->
		<completion string="if" priority="2">
			<behavior suffix="\}">
				<append><![CDATA[ $[condition] %}
					$[…]
				{% endif %]]></append>
			</behavior>
			<behavior suffix="%\}">
				<append><![CDATA[ $[condition] %}
					$[…]
				{% endif ]]></append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append><![CDATA[ $[condition] %}
					$[…]
				{% endif]]></append>
			</behavior>
			<behavior>
				<append><![CDATA[ $[condition] %}
					$[…]
				{% endif %}]]></append>
			</behavior>
		</completion>
		<completion string="if" priority="1">
			<behavior suffix="\}">
				<append> $[condition] %</append>
			</behavior>
			<behavior suffix="%\}">
				<append> $[condition] </append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append> $[condition]</append>
			</behavior>
			<behavior>
				<append> $[condition] %}</append>
			</behavior>
		</completion>
		<completion string="else" />
		<completion string="elsif">
			<behavior suffix="\}">
				<append> $[condition] %</append>
			</behavior>
			<behavior suffix="%\}">
				<append> $[condition] </append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append> $[condition]</append>
			</behavior>
			<behavior>
				<append> $[condition] %}</append>
			</behavior>
		</completion>
		<completion string="endif" />
		
		<!-- Iteration -->
		<completion string="for">
			<behavior suffix="\}">
				<append><![CDATA[ $[key], $[value] in $[dict] %}
				$[…]
				{% endfor %]]></append>
			</behavior>
			<behavior suffix="%\}">
				<append><![CDATA[ $[key], $[value] in $[dict] %}
				$[…]
				{% endfor ]]></append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append><![CDATA[ $[key], $[value] in $[dict] %}
				$[…]
				{% endfor]]></append>
			</behavior>
			<behavior>
				<append><![CDATA[ $[key], $[value] in $[dict] %}
				$[…]
				{% endfor %}]]></append>
			</behavior>
		</completion>
		<completion string="for" priority="2">
			<behavior suffix="\}">
				<append><![CDATA[ $[variable] in $[array] %}
				$[…]
				{% endfor %]]></append>
			</behavior>
			<behavior suffix="%\}">
				<append><![CDATA[ $[variable] in $[array] %}
				$[…]
				{% endfor ]]></append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append><![CDATA[ $[variable] in $[array] %}
				$[…]
				{% endfor]]></append>
			</behavior>
			<behavior>
				<append><![CDATA[ $[variable] in $[array] %}
				$[…]
				{% endfor %}]]></append>
			</behavior>
		</completion>
		<completion string="for" priority="1">
			<behavior suffix="\}">
				<append> $[variable] in $[array] %</append>
			</behavior>
			<behavior suffix="%\}">
				<append> $[variable] in $[array] </append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append> $[variable] in $[array]</append>
			</behavior>
			<behavior>
				<append> $[variable] in $[array] %}</append>
			</behavior>
		</completion>
		<completion string="endfor" />
		
		<!-- Layout -->
		<completion string="block">
			<behavior suffix="\}">
				<append><![CDATA[ $[name] %}
					$[content]
				{% endblock %]]></append>
			</behavior>
			<behavior suffix="%\}">
				<append><![CDATA[ $[name] %}
					$[content]
				{% endblock ]]></append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append><![CDATA[ $[name] %}
					$[content]
				{% endblock]]></append>
			</behavior>
			<behavior>
				<append><![CDATA[ $[name] %}
					$[content]
				{% endblock %}]]></append>
			</behavior>
		</completion>
		<completion string="filter">
			<behavior suffix="\}">
				<append><![CDATA[ $[name] %}
					$[content]
				{% endfilter %]]></append>
			</behavior>
			<behavior suffix="%\}">
				<append><![CDATA[ $[name] %}
					$[content]
				{% endfilter ]]></append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append><![CDATA[ $[name] %}
					$[content]
				{% endfilter]]></append>
			</behavior>
			<behavior>
				<append><![CDATA[ $[name] %}
					$[content]
				{% endfilter %}]]></append>
			</behavior>
		</completion>
		<completion string="extends">
			<behavior suffix="\}">
				<append> $[template] %</append>
			</behavior>
			<behavior suffix="%\}">
				<append> $[template] </append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append> $[template]</append>
			</behavior>
			<behavior>
				<append> $[template] %}</append>
			</behavior>
		</completion>
		<completion string="include">
			<behavior suffix="\}">
				<append> $[template] %</append>
			</behavior>
			<behavior suffix="%\}">
				<append> $[template] </append>
			</behavior>
			<behavior suffix="(\s*%\})">
				<append> $[template]</append>
			</behavior>
			<behavior>
				<append> $[template] %}</append>
			</behavior>
		</completion>
	</set>

	<!-- Keywords -->
	<set name="stencil.keywords" symbol="keyword">
		<completion string="or" />
		<completion string="and" />
		<completion string="not" />
		<completion string="in" />
	</set>

	<!-- Tests -->
	<set name="stencil.tests" symbol="keyword">
		<completion string="blank" />
		<completion string="nil" />
		<completion string="null" />
	</set>

	<!-- Filters -->
	<set name="stencil.filters" symbol="function">
		<completion string="capitalize" />
		<completion string="uppercase" />
		<completion string="lowercase" />
		<completion string="default">
			<behavior>
				<append>: $[value]</append>
			</behavior>
		</completion>
		<completion string="filter">
			<behavior>
				<append>: $[myfilter]</append>
			</behavior>
		</completion>
		<completion string="join">
			<behavior>
				<append>: "$[separator]"</append>
			</behavior>
		</completion>
		<completion string="split">
			<behavior>
				<append>: "$[separator]"</append>
			</behavior>
		</completion>
		<completion string="indent">
			<behavior>
				<append>:$[indentation width: Int],"$[indentation character]",$[indent first line: bool]</append>
			</behavior>
		</completion>
	</set>
</completions>
